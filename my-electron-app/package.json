{
  "name": "my-electron-app",
  "version": "1.0.0",
  "description": "My-Electron-App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --watch",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "YuMan",
  "license": "MIT",
  "devDependencies": {
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.yourcompany.my-electron-app",
    "productName": "My-Electron-App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "renderer.js",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
